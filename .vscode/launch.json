{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug DuckDB Extension",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/release/duckdb",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "lldb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build"
    },
    {
      "name": "Debug Extension Tests",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/release/test/unittest",
      "args": ["--test-dir=${workspaceFolder}/test"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "lldb"
    }
  ]
}
